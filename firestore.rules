rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isAuthenticated() { return request.auth != null; }
    function isOwner(userId) { return request.auth.uid == userId; }

    // --- Users ---
    match /users/{userId} {
      allow read: if isAuthenticated();
      // Allow user to delete their own account
      allow create, update, delete: if isAuthenticated() && isOwner(userId);
      
      match /notifications/{notificationId} {
        allow read: if isAuthenticated() && isOwner(userId);
        // Allow ANY authenticated user to create a notification (e.g. for likes/comments)
        allow create: if isAuthenticated();
        allow update, delete: if isAuthenticated() && isOwner(userId);
      }
      
      match /friendRequests/{requestId} {
         allow read, write: if isAuthenticated() && isOwner(userId);
      }
    }

    // --- Posts ---
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
      
      // Update: Allow counter updates by anyone; other fields by author only
      allow update: if isAuthenticated() && (
        resource.data.authorId == request.auth.uid ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likesCount', 'commentsCount', 'sharesCount'])
      );
      
      allow delete: if isAuthenticated() && resource.data.authorId == request.auth.uid;
      
      match /likes/{likeUserId} {
        allow read: if isAuthenticated();
        // User handles their own like document
        allow write: if isAuthenticated() && isOwner(likeUserId);
      }
      
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        // Allow anyone to create comment
        allow create: if isAuthenticated();
        // Allow deleting own comment
        allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      }
    }
    
    // --- Friend Requests (Root) ---
    match /friendRequests/{requestId} {
      allow read: if isAuthenticated() && (request.auth.uid == resource.data.from || request.auth.uid == resource.data.to);
      allow create: if isAuthenticated() && request.resource.data.from == request.auth.uid;
      allow update: if isAuthenticated() && (request.auth.uid == resource.data.from || request.auth.uid == resource.data.to);
      allow delete: if isAuthenticated() && (request.auth.uid == resource.data.from || request.auth.uid == resource.data.to);
    }
    
    // --- Stories ---
    match /stories/{storyId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // --- Marketplace (NEW: Added Missing Rules) ---
    match /marketplace/{itemId} {
      allow read: if isAuthenticated();
      // Create if sellerId matches
      allow create: if isAuthenticated() && request.resource.data.sellerId == request.auth.uid;
      // Update/Delete only by seller
      allow update, delete: if isAuthenticated() && resource.data.sellerId == request.auth.uid;
    }
    
    // --- Chats ---
    match /chatRooms/{roomId} {
      // Allow get to check existence
      allow get: if isAuthenticated();
      // List only if participant
      allow list: if isAuthenticated() && request.auth.uid in resource.data.participants;
      
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.participants;
      allow update: if isAuthenticated() && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/chatRooms/$(roomId)).data.participants;
        allow create: if isAuthenticated() && request.resource.data.senderId == request.auth.uid;
        allow update: if isAuthenticated();
      }
    }
  }
}
